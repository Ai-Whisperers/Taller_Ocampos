{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "taller-mecanico",
  "buildCommand": "bash vercel/scripts/build.sh",
  "installCommand": "bash vercel/scripts/install.sh",
  "outputDirectory": "frontend/.next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "cleanUrls": true,
  "trailingSlash": false,
  "env": {
    "NEXT_PUBLIC_APP_NAME": "Taller Ocampos"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_NAME": "Taller Ocampos"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://placeholder-backend.onrender.com/api/:path*"
    }
  ]
}
