{
  "name": "production",
  "description": "Production environment configuration for Vercel",
  "build": {
    "optimization": {
      "minify": true,
      "removeConsole": true,
      "images": {
        "enabled": true,
        "formats": ["image/webp", "image/avif"]
      }
    }
  },
  "security": {
    "headers": {
      "contentSecurityPolicy": true,
      "strictTransportSecurity": true,
      "xFrameOptions": true
    }
  },
  "performance": {
    "caching": {
      "static": "public, max-age=31536000, immutable",
      "api": "no-cache, no-store, must-revalidate"
    }
  },
  "monitoring": {
    "analytics": true,
    "speedInsights": true
  }
}
