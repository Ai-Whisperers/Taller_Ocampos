# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
# Currently using SQLite for development (PostgreSQL not installed yet)
DATABASE_URL="file:./dev.db"

# To switch to PostgreSQL after installation:
# 1. Install PostgreSQL (see SETUP_POSTGRESQL.md)
# 2. Create database: createdb taller_ocampos
# 3. Use one of these connection strings:
# DATABASE_URL="postgresql://postgres@localhost:5432/taller_ocampos"  # No password
# DATABASE_URL="postgresql://postgres:password@localhost:5432/taller_ocampos"  # With password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000
MOBILE_URL=exp://localhost:8081

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=

# Socket.io Configuration
SOCKET_PORT=3002